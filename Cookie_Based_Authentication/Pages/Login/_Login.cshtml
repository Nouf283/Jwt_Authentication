@page
@model Cookie_Based_Authentication.Pages.Login._LoginModel
@{
}

<div class="container border" style="padding:20px;">
   <form method="post">
       <div class="text-danger" asp-validation-summary="ModelOnly"></div>
       <div class="form-group row">
           <div class="col-2">
               <label asp-for="Credential.UserName" title="User Name" class="form-control"></label>
           </div>
            <div class="col-10">
                <input type="text" asp-for="Credential.UserName" class ="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Credential.UserName"></span>
       </div>
       <br/>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
           <div class="col-2">
               <label asp-for="Credential.Password" class="form-control"></label>
           </div>
            <div class="col-10">
                <input type="password" asp-for="Credential.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Credential.Password"></span>
       </div>
        <div class="row form-check mb-2">
            <div class="col-10">
                <input type="checkbox" asp-for="Credential.RememberMe" class="form-check-input" />
                <label class="form-check-label" asp-for="Credential.RememberMe"></label>
            </div>
            <div class="col">
                
            </div>
        </div>
       
        <div class="form-group row">
            <div class="col-10">
                @*<input type="submit" class="btn btn-primary" value="login" style="float: right;" />*@
            </div>
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="login" style="float: right;margin-top:20px;"/>
            </div>
        </div>

    </form>
</div>
