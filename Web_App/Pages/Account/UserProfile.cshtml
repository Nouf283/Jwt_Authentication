@page
@model Web_App.Pages.Account.UserProfileModel
@{
}

<form method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="UserProfile.Email" title="User Name" class="form-control"></label>
        </div>
        <div class="col-10">
            <input type="text" asp-for="UserProfile.Email" class="form-control" />
        </div>
        <span class="text-danger" asp-validation-for="UserProfile.Email"></span>
    </div>
    <br />
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="UserProfile.Department" title="Department" class="form-control"></label>
        </div>
        <div class="col-10">
            <input type="text" asp-for="UserProfile.Department" class="form-control" />
        </div>
        <span class="text-danger" asp-validation-for="UserProfile.Department"></span>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="UserProfile.Position" title="User Name" class="form-control"></label>
        </div>
        <div class="col-10">
            <input type="text" asp-for="UserProfile.Position" class="form-control" />
        </div>
        <span class="text-danger" asp-validation-for="UserProfile.Position"></span>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
    </div>

</form>
@if (!string.IsNullOrWhiteSpace(Model.SuccessMessage))
{
    <div class="alert alert-success" role="alert">
        @Model.SuccessMessage
    </div>
}