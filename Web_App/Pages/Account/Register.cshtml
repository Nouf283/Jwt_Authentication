@page
@model Web_App.Pages.Account.RegisterModel
@{
}
<p>
    <h3>User Registration</h3>
</p>
<div class="container border" style="padding:20px;">
<form method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="RegisterViewModel.Email" title="User Name" class="form-control"></label>
        </div>
        <div class="col-10">
                <input type="text" asp-for="RegisterViewModel.Email" class="form-control" />
        </div>
            <span class="text-danger" asp-validation-for="RegisterViewModel.Email"></span>
    </div>
    <br />
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group row">
        <div class="col-2">
                <label asp-for="RegisterViewModel.Password" class="form-control"></label>
        </div>
        <div class="col-10">
                <input type="password" asp-for="RegisterViewModel.Password" class="form-control" />
        </div>
            <span class="text-danger" asp-validation-for="RegisterViewModel.Password"></span>
    </div>
   
    <div class="form-group row">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Register"/>
        </div>
    </div>

</form>
</div>

